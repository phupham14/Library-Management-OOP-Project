<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.controller.HistoryController">
   <children>
      <Button fx:id="history_cancelRent" layoutX="487.0" layoutY="24.0" mnemonicParsing="false" onAction="#onHistoryCancelRent" text="Cancel Rent" />
      <Label layoutX="43.0" layoutY="26.0" text="History">
         <font>
            <Font name="Georgia Bold Italic" size="18.0" />
         </font>
      </Label>
      <TableView fx:id="history_tableView" onMouseClicked="#handleRowDoubleClicked" layoutY="67.0" prefHeight="334.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="history_rentId" prefWidth="100.0" text="Rent ID" />
          <TableColumn fx:id="history_customerId" prefWidth="100.0" text="Customer ID" />
            <TableColumn fx:id="history_borrowDate" prefWidth="150.0" text="Borrow Date" />
            <TableColumn fx:id="history_dueDate" prefWidth="150.0" text="Due Date" />
            <TableColumn fx:id="history_isCollected" prefWidth="100.0" text="Is Collected" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
